
  <%= form_with model: @task do |t| %>
    <div class="form-group">
      <%= t.label :title %>
      <%= t.text_field :title %>
    </div>

    <div class="form-group">
      <%= t.label :details %>
      <%= t.text_field :details %>
    </div>

    <% unless @task.new_record? %>
      <div class="checkbox">
        <label>
          <%= t.check_box:completed %> Completed
        </label>
      </div>
    <% end %>
      <%= t.submit class: 'btn btn-primary mt-3' %>
  <% end %>
